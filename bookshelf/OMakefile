.PHONY: build
.DEFAULT: build 


println($(absname $(srcdir)))

songs=$(find $(srcdir)/bookshelf -name *.song)
songs=$(removeprefix $(srcdir)/bookshelf/,$(songs))
println($"$(songs)")

println($"destdir = $(destdir)")


foreach(f,$(songs))
	name=$(removesuffix $f)
	$(destdir)/$(name).html : $f/grille.txt $f/lyrics.txt $f/structure.txt $f/main.txt
		touch $@

	build : $(destdir)/$(name).html
	export .RULE

